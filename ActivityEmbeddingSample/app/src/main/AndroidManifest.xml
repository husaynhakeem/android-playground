<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.husaynhakeem.activityembeddingsample">

    <application
        android:name=".ActivityEmbeddingSampleApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActivityEmbeddingSample"
        tools:targetApi="31">

        <activity
            android:name=".list.ListActivity"
            android:exported="true"
            android:label="@string/activity_list_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".detail.DetailActivity" />

        <activity android:name=".detail.DetailPlaceholderActivity" />

        <activity android:name=".share.ShareActivity" />
    </application>
</manifest>